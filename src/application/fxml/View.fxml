<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="pane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ViewController">
   <children>
      <VBox fx:id="vBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="800.0">
         <children>
            <Label prefHeight="40.0" prefWidth="800.0" text="Wpisz tekst do zakodownia(program szyfruje wyłącznie znaki z alfabetu ang A-Z)" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS" wrapText="true">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
            <TextArea fx:id="textIn" prefHeight="170.0" prefWidth="600.0" />
            <Label fx:id="label" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="800.0" text="Wynik kodowania:" textAlignment="RIGHT" wrapText="true" />
            <TextArea fx:id="textResoult" prefHeight="170.0" prefWidth="600.0" />
            <HBox prefHeight="60.0" prefWidth="600.0">
               <children>
                  <Button fx:id="button1" mnemonicParsing="false" onAction="#codeButton" prefHeight="60.0" prefWidth="200.0" text="Szyfruj" />
                  <Button fx:id="button2" mnemonicParsing="false" onAction="#exitButton" prefHeight="60.0" prefWidth="200.0" text="Zakończ" />
                  <Label prefHeight="60.0" prefWidth="400.0" text="Aby rozszyfrować zakodowaną wiadomość należy powtórzyć proces kodowania" textAlignment="JUSTIFY" wrapText="true">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
